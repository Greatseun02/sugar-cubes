<%- include("../partials/head", {title:" - Login", href:"/login", hrefText:"Sign in as User"}) %>

<h1 class="text-red-600 text-[500px]"></h1>

<form action="/admin-login" method="post" class="pt-10 lg:w-[70%] mx-auto">
    <p class="text-2xl font-bold mb-5 text-center">Login - Admin</p>
    <div class="grid gap-2 mb-3">
        <label class="font-medium">Username</label>
        <input required class="p-2 outline-none" type="text" name="username" placeholder="Username"  >
    </div>
    <div class="grid gap-2">
        <label class="font-medium">Password</label>
        <input required class="p-2 outline-none" type="text" name="password" placeholder="Password"  >
    </div>
    <button class="text-center w-full py-2 bg-primary mt-7" type="submit">Submit</button>
</form>

<%- include("../partials/footer") %>